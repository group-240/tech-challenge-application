<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Property para nome da aplicação -->
    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="tech-challenge-api"/>
    
    <!-- Console Appender - JSON Format (para Kubernetes/CloudWatch) -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Campos customizados -->
            <customFields>{"application":"${appName}","environment":"${SPRING_PROFILES_ACTIVE:-dev}"}</customFields>
            
            <!-- Incluir stack trace completo -->
            <includeStacktrace>true</includeStacktrace>
            
            <!-- Incluir contexto MDC (para tracing) -->
            <includeMdc>true</includeMdc>
            
            <!-- Incluir informações de contexto -->
            <includeContext>true</includeContext>
            
            <!-- Incluir caller data (classe/método/linha) -->
            <includeCallerData>false</includeCallerData>
            
            <!-- Configuração de timestamp -->
            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSSX</timestampPattern>
            
            <!-- Campos do log estruturado -->
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <version>version</version>
                <message>message</message>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <levelValue>[ignore]</levelValue>
            </fieldNames>
        </encoder>
    </appender>
    
    <!-- Console Appender - Human Readable (para desenvolvimento local) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Profile específico: Desenvolvimento (logs legíveis) -->
    <springProfile name="local,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.fiap.techchallenge" level="DEBUG"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
    </springProfile>
    
    <!-- Profile específico: Dev/Prod (logs em JSON para CloudWatch) -->
    <springProfile name="dev,prod">
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
        </root>
        <logger name="com.fiap.techchallenge" level="DEBUG"/>
        <logger name="org.springframework.web" level="INFO"/>
        <logger name="org.hibernate.SQL" level="INFO"/>
        <logger name="org.springframework.security" level="INFO"/>
    </springProfile>
    
    <!-- Loggers específicos para frameworks (reduzir ruído) -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.boot" level="INFO"/>
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.apache.tomcat" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    
    <!-- Logger para SQL queries (desabilitar em prod se necessário) -->
    <logger name="org.hibernate.SQL" level="INFO" additivity="false">
        <appender-ref ref="JSON_CONSOLE"/>
    </logger>
</configuration>
